@model WorkerUpdateVM
@{
    ViewData["Title"] = "Update";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Worker create</h6>
    </div>
    <div class="card-body">
        <form id="islepls" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input class="form-control" asp-for="FullName">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation"></label>
                <input class="form-control" asp-for="Designation">
                <span class="text-danger" asp-validation-for="Designation"></span>
            </div>
            <div class="form-group">
                <div class="d-flex">
                    <img width="80px" src="~/imgs/workers/@Model.FileUrl" />
                </div>
                <label asp-for="Image">Cover image</label>
                <input accept="image/*" class="form-control" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <div class="col">
                <label asp-for="DepartmentId">Departments</label>
                <select class="form-control" asp-for="DepartmentId" asp-items='new SelectList(ViewBag.Department,"Id","DepartmentName")'>
                    <option>Select Brand</option>
                </select>
                <span class="text-danger" asp-validation-for="DepartmentId"></span>
            </div>
            <button type="submit" onclick="$('islepls').submit()" asp-action="Update" asp-controller="Worker" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

